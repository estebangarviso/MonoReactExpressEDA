{
	"name": "@demo/common",
	"private": true,
	"version": "0.0.1",
	"description": "Common package for shared libraries.",
	"main": "./dist/main.js",
	"files": [
		"main.js",
		"server.js"
	],
	"type": "module",
	"exports": {
		".": "./dist/main.js",
		"./server": "./dist/server.js"
	},
	"scripts": {
		"build": "babel src -d dist",
		"format": "lint-staged"
	},
	"keywords": [
		"common",
		"shared",
		"libraries"
	],
	"author": "Esteban Garviso",
	"license": "MIT",
	"dependencies": {
		"typescript": "^5.5.4"
	},
	"devDependencies": {
		"@babel/eslint-parser": "7.24.8",
		"@babel/plugin-syntax-import-assertions": "7.24.7",
		"@eslint/compat": "1.1.0",
		"@eslint/js": "9.5.0",
		"eslint": "9.x",
		"eslint-plugin-prettier": "5.1.3",
		"globals": "15.3.0",
		"lint-staged": "14.0.1",
		"prettier": "3.3.2"
	},
	"lint-staged": {
		"src/**/*.ts": "tsc --noEmit",
		"src/**/*.{ts,js,md,json}": [
			"eslint --fix --max-warnings 0"
		]
	}
}
